{
	"_version": "1.7.0",
	"sap.app": {
		"id": "com.sapJITMonitor",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"resources": "resources.json",
		"ach": "ach",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.40.12"
		},
		"dataSources": {
			"mainService": {
				"uri": "/sap/opu/odata/sap/ZJIT_DRFAT_CALL_ACTIONS_SRV/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0",
					"localUri": "localService/metadata.xml"
				}
			}

		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "com.sapJITMonitor.view.FlexibleColumnLayout",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.48.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {},
				"sap.ui.table": {},
				"sap.ushell": {},
				"sap.collaboration": {},
				"sap.ui.comp": {},
				"sap.uxap": {}
			}
		},
		"config": {
			"sample": {
				"stretch": true,
				"files": [
					"Component.js",
					"FlexibleColumnLayout.controller.js",
					"FlexibleColumnLayout.view.xml",
					"Master.controller.js",
					"Master.view.xml",
					"Detail.controller.js",
					"Detail.view.xml",
					"DetailDetail.view.xml",
					"ObjectPageSelectedSection.view.xml",
					"ObjectPageSelectedSection.controller.js",
					"GoalsBlock.controller.js",
					"GoalsBlock.js", 
					"GoalsBlock.view.xml"
				]
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.sapJITMonitor.i18n.i18n"
				}
			},
			"actionModel": {
				"dataSource": "mainService",
				"preload": true
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		}
	}
}